{
  "name": "viminershop",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "postinstall2": "ngcc",
    "ng": "ng",
    "start": "ng serve --ssl",
    "start:nossl": "ng serve",
    "build": "ng build --configuration production",
    "test": "ng test",
    "test:app:watch": "ng test viminershop --code-coverage --watch=true",
    "lint": "ng lint viminershop --fix",
    "e2e": "ng e2e",
    "translations:extract": "ngx-translate-extract --input ./src --output ./src/translations/template.json --format=json --clean --sort",
    "ci": "npm run lint && npm run test && npm run e2e && npm run build:ssr:prod",
    "update": "ng update --force --all"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run ci",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@angular/animations": "~12.1.2",
    "@angular/common": "~12.1.2",
    "@angular/compiler": "~12.1.2",
    "@angular/core": "~12.1.2",
    "@angular/forms": "~12.1.2",
    "@angular/platform-browser": "~12.1.2",
    "@angular/platform-browser-dynamic": "~12.1.2",
    "@angular/router": "~12.1.2",
    "@ng-bootstrap/ng-bootstrap": "^7.0.0",
    "@ngrx/effects": "^10.0.1",
    "@ngrx/store": "^10.0.1",
    "@ngx-loading-bar/core": "^5.1.2",
    "@ngx-loading-bar/http-client": "^5.1.2",
    "@ngx-loading-bar/router": "^5.1.2",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "angular-notifier": "^9.0.1",
    "angular-tawk": "0.0.4",
    "angularx-social-login": "^4.0.1",
    "bootstrap": "^4.5.3",
    "font-awesome": "^4.7.0",
    "highcharts": "^9.1.2",
    "highcharts-angular": "^2.10.0",
    "html2canvas": "^1.1.4",
    "husky": "^7.0.1",
    "js-cookie": "^2.2.1",
    "jspdf": "^2.3.1",
    "ngx-image-cropper": "^4.0.1",
    "ngx-image-zoom": "^0.6.0",
    "ngx-paypal": "^7.0.0",
    "primeicons": "^4.1.0",
    "primeng-lts": "^9.2.8",
    "proj4": "^2.7.5",
    "rxjs": "~6.6.0",
    "scriptjs": "^2.5.9",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.2",
    "@angular/cli": "~12.1.2",
    "@angular/compiler-cli": "~12.1.2",
    "@angular/localize": "^12.1.2",
    "@biesbjerg/ngx-translate-extract": "^7.0.4",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^12.11.1",
    "@types/scriptjs": "0.0.2",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}
